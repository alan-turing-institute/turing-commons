  title = {Ethische {{Fragen}} Bei Der {{Nutzung}} von {{Big Data}} in Der {{SozialforschungEthical Issues}} in the {{Use}} of {{Big Data}} for {{Social Research}}},
  author = {Weinhardt, Michael},
  year = {2020},
